<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Egezavr.WeekPage"
             Title="WeekPage">
    <ScrollView>
        <VerticalStackLayout>
            <VerticalStackLayout x:Name="MondayStack" Margin="5,10,5,0">
                <Label Text="Понедельник" TextColor="#363F3E" FontSize="35" />
                <BoxView HeightRequest="5" Color="#363F3E" Margin="0,5,0,0"/>
                <Border
                    Margin="0,10,0,0"
                    HeightRequest="75"
                    StrokeShape="RoundRectangle 20"
                    StrokeThickness="3"
                    BackgroundColor="#E9E9E9"
                    Stroke="#363F3E"
                    StrokeDashOffset="10"
                    >
                    <Button 
                        BackgroundColor="#00000000"/>
                </Border>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>