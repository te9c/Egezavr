<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Egezavr.TaskPage"
             >
    <ScrollView>
        <VerticalStackLayout x:Name="MainVerticalStack" Margin="10">
            <Label Text="Отслеживаемые предметы" FontSize="30" TextColor="{StaticResource Primary}" />
            <BoxView HeightRequest="5" Color="{StaticResource Gray500}" Margin="0,5,0,0" />
            <Border
                Margin="0,10,0,0"
                HeightRequest="75"
                StrokeShape="RoundRectangle 20"
                StrokeThickness="3"
                BackgroundColor="#E9E9E9"
                Stroke="#363F3E"
                StrokeDashArray="1,1"
                StrokeDashOffset="1"
                >
                <Button
                    Text="+ Добавить предмет"
                    Clicked="AddButtonClicked"
                    Padding="0,0,130,0"
                    FontSize="20"
                    TextColor="Black"
                    BackgroundColor="#00000000"
                    />
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>