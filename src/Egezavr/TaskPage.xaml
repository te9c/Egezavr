<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Egezavr.TaskPage"
             >
    <ScrollView>
        <VerticalStackLayout x:Name="MainVerticalStack" Margin="10">
            <Label Text="Отслеживаемые предметы" FontSize="30" TextColor="{StaticResource Primary}" />
            <BoxView HeightRequest="5" Color="{StaticResource Gray500}" Margin="0,5,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>